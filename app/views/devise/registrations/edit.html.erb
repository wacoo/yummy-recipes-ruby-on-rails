<div class="edit-form">
  <h2 class="label">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field-wrapper">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'field' %>
    </div>

    <div class="field">
      <%= f.label :role, class: 'label' %><br />
      <%= f.select :role, options_for_select(['Admin', 'User']), {}, class: 'field' %>
    </div>
    
    <div class="field-wrapper">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field-wrapper">
      <%= f.label :password, class: 'label' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'field' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field-wrapper">
      <%= f.label :password_confirmation, class: 'label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field' %>
    </div>

    <div class="field-wrapper">
      <%= f.label :current_password, class: 'label' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'field' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn-primary' %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn-primary' %></div>

<%= link_to "Back", :back, class: 'btn-primary' %>
</div>