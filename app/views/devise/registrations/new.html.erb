<div class="edit-form">
  <h2 class="label">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, class: 'label' %><br />
      <%= f.text_field :name, class: 'field' %>
    </div>

    <div class="field">
      <%= f.label :role, class: 'label' %><br />
      <%= f.select :role, options_for_select(['Admin', 'User']), {}, class: 'field' %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'field' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>