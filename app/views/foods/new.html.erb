<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_with(model: @food) do |form| %>
  <div class="form-wrapper">
    <div class="field-wrapper">
      <%= form.label :name, class: 'label' %>
      <%= form.text_field :name, class: 'field' %>
    </div>

    <div class="field-wrapper">
      <%= form.label :measurement_unit, class: 'label' %>
      <%= form.text_field :measurement_unit, class: 'field' %>
    </div>

    <div class="field-wrapper">
      <%= form.label :price, class: 'label' %>
      <%= form.text_field :price, class: 'field' %>
    </div>

    <div class="field-wrapper">
      <%= form.label :quantity, class: 'label' %>
      <%= form.number_field :quantity, class: 'field' %>
    </div>

    <div class="rec-new-submit">
      <%= form.submit "CREATE FOOD", class: "btn-primary" %>
    </div>
  </div>
<% end %>