<h1>Add New Ingredient</h1>

<%= form_with(url: recipe_recipe_foods_path, model: @recipe_food, class: "form container") do |form| %>
    <!-- form fields and input elements -->
    <%= form.hidden_field :recipe_id %>
    
    <div class='row align-items-end'>
      <div class="field-wrapper">
        <%= form.label :quantity, class: "label" %>
        <%= form.number_field :quantity, class: "field", min: 1, value: 1, required: true %>
      </div>
      <div class="field-wrapper">
        <%= form.label :food_id, class: "label" %>
        <%= form.collection_select :food_id, current_user.foods, :id, :name, { include_blank: false }, class: "field" %>
      </div>
      <div class="field-wrapper">
        <%= form.submit "Add new ingredient", class: "btn-primary" %>
      </div>
    </div>
  <% end %>

<%= link_to "Add new food", new_food_path, class: 'btn-primary' %>